@model WeatherForecast.Models.SearchByCity
@{
    ViewData["Title"] = "SearchByCity";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<h1></h1>
<div class="container">
    <form method="post">
    <div class="container"></div>
    <h2>Search By City Name</h2>
    <div>
        <input asp-for="CityName" class="form-control" placeholder="Enter city name.." />
        <br />
        <button asp-controller="WeatherForecast" asp-action="SearchByCity" class="btn btn-outline-primary">
            Search
        </button>
        <span asp-validation-for="CityName" class="text-danger"></span>
    </div>
    </form>
</div>

